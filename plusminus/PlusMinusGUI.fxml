<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane prefHeight="200.0" prefWidth="500.0"
	fx:controller="gui.plusminus.Controller" xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8">
	<children>
		<Button text="+" fx:id="plus" onAction="#buttonPlusClicked"
			maxWidth="100.0" maxHeight="100.0" GridPane.hgrow="ALWAYS"
			GridPane.vgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0" />
		<Label text="0" fx:id="counterL" maxWidth="100.0" maxHeight="100.0"
			GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" GridPane.rowIndex="1"
			GridPane.columnIndex="0" />
		<Button text="-" fx:id="minus" onAction="#buttonMinusClicked"
			maxWidth="100.0" maxHeight="100.0" GridPane.hgrow="ALWAYS"
			GridPane.vgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0" />
	</children>
</GridPane>

